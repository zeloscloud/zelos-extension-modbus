      {"name": "L3", "address": 4, "datatype": "float32", "unit": "V"}
    ],
    "current": [
      {"name": "L1", "address": 6, "datatype": "float32", "unit": "A"},
      {"name": "L2", "address": 8, "datatype": "float32", "unit": "A"},
      {"name": "L3", "address": 10, "datatype": "float32", "unit": "A"}
